//P108
#include <stdio.h>

int main()
{
    int grade;
    
    printf("Enter your grade\n");
    scanf_s("%d", &grade);


 if (grade >= 90) 
        puts("A");
    
    else {
        if (grade >= 80) 
            puts("B");
        
        else {
            if (grade >= 70) 
                puts("C");
            
            else {
                if (grade >= 60) 
                    puts("D");
                
                else 
                    puts("F");
                
            }
        }
    }

    return 0;
}
