/*題目 : 建立一個10*4陣列，將全班10人的學號，數學成績，計概成績放入陣列中(直接置於程式內)。
建立一個指標陣列，指標分別指向這十位同學的姓名的字串變數，
根據每個學生的平均成績，由大到小排序，印出美觀、大方的全班成績表(包含姓名、學號、成績、平均、名次)，
並印出最高平均成績與最低平均成績的同學和分數。
需使用排序、報表、中位數、取平均副程式，
資料交換需使用副程式p.322的swap( )副程式完成。*/

#include <stdio.h>
#define SIZE 4
#define SIZEID 10

void swap(int* e1Ptr, int* e2Ptr);
void sort(int a[][SIZE], const char** stdna);
void printAry(int ar[]);
double total(int TAry[][SIZE]);

int main(void)
{
    int key, result = 0, i, j;
    // initialize a
    int a[SIZEID][SIZE] = { {2,98,72,0},
                        {3,76,32,0},
                        {6,98,67,0},
                        {7,89,32,0},
                        {8,98,55,0},
                        {9,89,32,0},
                        {10,98,65,0},
                        {11,99,32,0},
                        {12,98,71,0},
                        {13,76,91,0} };

    const char* name[SIZEID] = { "Alice","Bob","Cat","Dog","Eve","Fate","Google","Hello","Intel","Jackie" };

    puts("Data items in original order");

    for (j = 0; j < 10; j++)
    {
        for (i = 1; i < SIZE - 1; ++i) {
            a[j][3] += a[j][i];
        }
    }
    for (j = 0; j < 10; j++) {
        printf_s("%8s", name[j]);
        printAry(a[j]);
    }

    sort(a, name);
    puts("\nData items in ascending order");
    for (j = 0; j < 10; j++) {
        printf_s("%8s", name[j]);
        printAry(a[j]);
    }

    printf_s("Max:NO.%d %d  Min:NO.%d %d \n", a[0][0], a[0][3], a[SIZEID - 1][0], a[SIZEID - 1][3]);
    int mid = SIZEID / 2;
    double avg = total(a);
    printf("Avg:%.2lf  ", avg);
    printf("mid:%d\n", a[mid][3]);

}


void sort(int a[][SIZE], const char** stdna)
{
    int hold, pass, i;
    const char* ptr;
    for (pass = 1; pass < SIZEID; ++pass) {
        for (i = 0; i < SIZEID - pass; ++i) {

            if (a[i][3] < a[i + 1][3]) {
                swap(&a[i][0], &a[i + 1][0]);
                swap(&a[i][1], &a[i + 1][1]);
                swap(&a[i][2], &a[i + 1][2]);
                swap(&a[i][3], &a[i + 1][3]);
                ptr = stdna[i];
                stdna[i] = stdna[i + 1];
                stdna[i + 1] = ptr;

            }
        }
    }
}

void swap(int* e1Ptr, int* e2Ptr)
{
    int hold;
    hold = *e1Ptr;
    *e1Ptr = *e2Ptr;
    *e2Ptr = hold;
}


void printAry(int ar[]) {
    int i;
    for (i = 0; i < SIZE; i++) printf("%4d ", ar[i]);
    puts("");
}

double total(int TAry[SIZEID][SIZE]) {
    int i;
    double tal = 0;
    for (i = 0; i < SIZEID; i++) tal += TAry[i][3];
    return tal / SIZEID / 2;
}
//-----------------------------------------------------------------------------------------------
#include <stdio.h>
#define SIZE 4
#define stu 10

void sort(char **name,int a[][SIZE], int size);
void swap(int *e1Ptr,int*e2Ptr);

int main(void){
	
    int key,result=0,i,j;
    // initialize a
    int a[10][SIZE] = {{2,98,72,0},
						{3,76,32,0},
						{6,98,67,0},
						{7,89,32,0},
						{8,98,55,0},
						{9,50,32,0},
						{10,77,65,0},
						{11,65,32,0},
						{12,5,71,0},
						{13,99,91,0}};
						
						
	char*  name[10] = {"陳小真",
    					"張藝興",
   						"王小明",
  					    "黃大明",
    					"謝可愛",
   						"潘立文",
    					"鄭小英",
    					"林姍姍",
    					"曾小白",
    					"何美人"};						
						

    printf("未排序成績：\n");
    printf("姓  名 學號 數 國  總分\n");
    
    for(j=0;j<10;j++){	
		for (i = 1; i < SIZE-1; ++i) {
        	a[j][3]+=a[j][i];
    	}
	}
    
    for(j=0;j<10;j++){
   	printf("%s",name[j]); 
    	for (i = 0; i < SIZE; ++i) {
        	printf("%4d", a[j][i]);
    	}
    	printf("\n");
	}
    
/*    printf("\n");
    for (i = 0; i < SIZE; ++i) {
        printf("%4d", a[1][i]);
    }
*/
    // bubble sort                                         
    // loop to control number of passes                    

    sort( name,a,stu);
    printf("\n");
    printf("已排序成績：\n");
    printf("姓  名 學號 數 國  總分\n");

    for(j=0;j<10;j++){	
    printf("%s",name[j]); 
	for (i = 0; i < SIZE; ++i) {
        	printf("%4d", a[j][i]);
    	}
    	printf("\n");
	}

}


void sort(char **name,int a[][SIZE], int size){
	char *ptr;
    int hold,pass,i;
    for (pass = 1; pass < size; ++pass) {

        for (i = 0; i < size - pass; ++i) {

            if (a[i][3] > a[i + 1][3]) {
            	ptr=name[i];
            	name[i]=name[i+1];
            	name[i+1]=ptr;
            	
                swap(&a[i][0], &a[i+1][0]);
                swap(&a[i][1], &a[i+1][1]);
                swap(&a[i][2], &a[i+1][2]);
                swap(&a[i][3], &a[i+1][3]);
            }
        }
    }

}

void swap(int *e1Ptr,int*e2Ptr){

	int hold;
	hold=*e1Ptr;
	*e1Ptr=*e2Ptr;
	*e2Ptr=hold;
}
