// Fig. 4.6: fig04_06.c
// Calculating compound interest
#include <stdio.h>
#include <math.h>  

int main(void)
{
   int principal;
   unsigned int rate;
   int years;
   unsigned int year = 1;
   unsigned int amount;
   
   printf("enter the principal:");
   scanf( "%d", &principal );
   
   printf("enter the years:");
   scanf( "%d", &years );
   
   printf("enter the rate:");
   scanf( "%d", &rate );
   
   for (; year <= years ; ++year) {

      amount = principal * pow(1.0 + rate, year);

      printf("%4u%21.2f\n", year, amount); 

 }

} 
