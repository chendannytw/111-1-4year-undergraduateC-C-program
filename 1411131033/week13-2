	puts("\n排序過後的資料：\n");
	printf("學號  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[0][i]);
	}
	printf("\n");
	printf("數學  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[1][i]);	
	}
