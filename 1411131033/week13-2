	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[1][i]);	
	}
	printf("\n");
	printf("計概  ");
	for ( i = 0 ; i<SIZE ;++i){
		printf("%4d",a[2][i]);	
	}
	printf("\n");
	printf("平均  ");
	for ( i = 0 ; i<SIZE ;++i){	
		printf("%4d",a[3][i]);
	}
	printf("\n");
	
	
